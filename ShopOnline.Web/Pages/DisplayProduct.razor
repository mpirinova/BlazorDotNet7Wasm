<MudGrid Justify="Justify.FlexStart" Spacing="4">
    @foreach (var item in Products)
    {
        <MudItem xs="4" class="mb-2">
            <MudLink Href="@($"/details/{item.Id}")" Underline="Underline.None">
                <MudCard Elevation="20">
                    <MudCardMedia Image="@item.ImageURL" />
                    <MudCardContent>
                        <MudText Typo="Typo.h5">@item.Name</MudText>
                        <MudText Typo="Typo.h6">@item.Price.ToString("C")</MudText>
                    </MudCardContent>
                </MudCard>
            </MudLink>
        </MudItem>
    }
</MudGrid>
