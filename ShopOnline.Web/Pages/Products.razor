@page "/"

@if(ProductsList is null)
{
    <DisplaySpinner />
}
else if(ErrorMessage is not null)
{
    <DisplayError ErrorMessage="@ErrorMessage"></DisplayError>
}
else
{
    <MudText Class="m-4" Typo="Typo.h3">Products</MudText>

    @if (ProductsList.Count() > 0)
    {
        @foreach(var prodGroup in GetGroupedProductsByCategory())
        {
            <MudText Class="m-4" Typo="Typo.h4">@GetCategoryName(prodGroup)</MudText>
            <MudContainer class = "row mt-3">
                <DisplayProduct Products = "@prodGroup.Take(3)"></DisplayProduct>
            </MudContainer>
            <hr class="mb-3"/>
        }
    }
}
